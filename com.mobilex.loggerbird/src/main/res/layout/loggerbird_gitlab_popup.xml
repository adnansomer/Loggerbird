<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_gitlab"
    android:layout_width="match_parent"
    android:background="@color/darkTransparent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/pop_up_shape"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorFab"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_gitlab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorFab"
                app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
                app:title="@string/textView_gitlab_toolbar_title"
                app:titleTextColor="@color/black">
            </androidx.appcompat.widget.Toolbar>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/toolbar_shadow">
                </View>
            </FrameLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="visible"
            android:background="@color/colorFab">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:layout_margin="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        app:cardElevation="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:text="@string/textView_gitlab_project"
                                android:textColor="@color/black"
                                android:textSize="16sp">
                            </TextView>
                            <AutoCompleteTextView
                                android:id="@+id/auto_textview_gitlab_project"
                                android:background="@null"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </AutoCompleteTextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView_gitlab_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:baselineAligned="false"
                                android:text="@string/textView_gitlab_title"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editText_gitlab_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="10dp"
                                android:background="@null"
                                android:cursorVisible="true"
                                android:gravity="top"
                                android:hint="@string/editText_gitlab_title"
                                android:lines="1"
                                android:maxLines="1"
                                android:textCursorDrawable="@color/colorBlack"
                                android:textSize="16sp">
                            </com.google.android.material.textfield.TextInputEditText>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        app:cardElevation="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:text="@string/textView_gitlab_description"
                                android:textColor="@color/black"
                                android:textSize="16sp">
                            </TextView>
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editText_gitlab_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="10dp"
                                android:background="@null"
                                android:cursorVisible="true"
                                android:gravity="top"
                                android:hint="@string/editText_gitlab_description"
                                android:lines="5"
                                android:maxLines="6"
                                android:textCursorDrawable="@color/colorBlack"
                                android:textSize="16sp">
                            </com.google.android.material.textfield.TextInputEditText>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        app:cardElevation="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:text="@string/textView_gitlab_assignee"
                                android:textColor="@color/black"
                                android:textSize="16sp">
                            </TextView>
                            <Spinner
                                android:id="@+id/spinner_gitlab_assignee"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </Spinner>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        app:cardElevation="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:text="@string/textView_gitlab_milestone"
                                android:textColor="@color/black"
                                android:textSize="16sp">
                            </TextView>
                            <Spinner
                                android:id="@+id/spinner_gitlab_milestone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </Spinner>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        app:cardElevation="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:text="@string/textView_gitlab_labels"
                                android:textColor="@color/black"
                                android:textSize="16sp">
                            </TextView>
                            <Spinner
                                android:id="@+id/spinner_gitlab_labels"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </Spinner>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        app:cardElevation="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:text="@string/textView_gitlab_confidentiality"
                                android:textColor="@color/black"
                                android:textSize="16sp">
                            </TextView>
                            <Spinner
                                android:id="@+id/spinner_gitlab_confidentiality"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </Spinner>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        app:cardElevation="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:text="@string/textView_gitlab_weight"
                                android:textColor="@color/black"
                                android:textSize="16sp">
                            </TextView>
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editText_gitlab_weight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="10dp"
                                android:background="@null"
                                android:cursorVisible="true"
                                android:gravity="top"
                                android:inputType="number"
                                android:hint="@string/editText_gitlab_weight"
                                android:textCursorDrawable="@color/colorBlack"
                                android:textSize="16sp">
                            </com.google.android.material.textfield.TextInputEditText>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        app:cardElevation="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:text="@string/textView_gitlab_due_date"
                                android:textColor="@color/black"
                                android:textSize="16sp">
                            </TextView>

                            <TextView
                                android:id="@+id/textView_gitlab_due_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:textCursorDrawable="@color/colorBlack"
                                android:layout_marginBottom="10dp"
                                android:textSize="16sp"
                                android:text="@string/textView_gitlab_enter_due_date"
                                android:layout_marginEnd="5dp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView_slack_attachments"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="@string/textView_slack_attachment"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/ic_attach_file_black_24dp">

                                </ImageView>

                                <androidx.recyclerview.widget.RecyclerView
                                    android:visibility="visible"
                                    android:id="@+id/recycler_view_gitlab_attachment"
                                    android:layout_width="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_height="wrap_content">
                                </androidx.recyclerview.widget.RecyclerView>

                                <TextView
                                    android:id="@+id/textView_slack_no_attachment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textSize="16sp"
                                    android:visibility="gone"
                                    android:text="@string/textView_slack_no_attachment">
                                </TextView>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:weightSum="2">

            <Button
                android:id="@+id/button_gitlab_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/pop_up_button_shape"
                android:text="@string/button_slack_create"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:elevation="5dp" />

            <Button
                android:id="@+id/button_gitlab_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/pop_up_cancel_button_shape"
                android:text="@string/button_slack_cancel"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/gitlab_progressbar_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:clickable="true"
        android:background="@color/darkTransparent"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/gitlab_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progress_bar_loading"
            android:indeterminateDuration="1000"
            android:visibility="gone">
        </ProgressBar>

    </FrameLayout>

</FrameLayout>