<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    app:layout_behavior="com.google.android.material.transformation.FabTransformationSheetBehavior">

    <com.google.android.material.circularreveal.CircularRevealLinearLayout
        android:id="@+id/reveal_linear_layout_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|top"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/white"
        android:layout_margin="50dp"
        android:elevation="8dp"
        app:layout_behavior="com.google.android.material.transformation.FabTransformationSheetBehavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:padding="4dp">
            <CheckBox
                android:id="@+id/checkBox_future_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/black"
                android:background="@null" />
            <TextView
                android:id="@+id/textView_future_task_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textView_loggerbird_future_title"
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:textSize="12sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/textView_send_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_mail_black_24dp"
            android:drawableStart="@drawable/ic_mail_black_24dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:padding="8dp"
            android:text="@string/textView_loggerbird_email_title" />

        <TextView
            android:id="@+id/textView_share_jira"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_jira_logo_24dp"
            android:drawableStart="@drawable/ic_jira_logo_24dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:padding="8dp"
            android:text="@string/textView_loggerbird_jira_title" />

        <TextView
            android:id="@+id/textView_share_slack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:padding="8dp"
            android:text="@string/textView_loggerbird_slack_title"
            android:drawableStart="@drawable/ic_slack_logo_24dp"
            android:drawableLeft="@drawable/ic_slack_logo_24dp" />

        <TextView
            android:id="@+id/textView_share_gitlab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:padding="8dp"
            android:text="@string/textView_loggerbird_gitlab_title"
            android:drawableStart="@drawable/ic_gitlab_logo_24dp"
            android:drawableLeft="@drawable/ic_gitlab_logo_24dp" />

        <TextView
            android:id="@+id/textView_share_github"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:padding="8dp"
            android:text="@string/textView_loggerbird_github_title"
            android:drawableStart="@drawable/ic_github_logo_24dp"
            android:drawableLeft="@drawable/ic_github_logo_24dp" />
        <TextView
            android:id="@+id/textView_share_trello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:padding="8dp"
            android:text="@string/textView_loggerbird_trello_title"
            android:drawableStart="@drawable/ic_trello_logo_24dp"
            android:drawableLeft="@drawable/ic_trello_logo_24dp" />
        <TextView
            android:id="@+id/textView_share_pivotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:padding="8dp"
            android:text="@string/textView_loggerbird_pivotal_title"
            android:drawableStart="@drawable/ic_pivotal_logo_24dp"
            android:drawableLeft="@drawable/ic_pivotal_logo_24dp" />
        <TextView
            android:id="@+id/textView_share_basecamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:padding="8dp"
            android:text="@string/textView_loggerbird_basecamp_title"
            android:drawableStart="@drawable/ic_basecamp_logo_24dp"
            android:drawableLeft="@drawable/ic_basecamp_logo_24dp" />
        <TextView
            android:id="@+id/textView_share_clubhouse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:padding="8dp"
            android:text="@string/textView_loggerbird_clubhouse_title"
            android:drawableStart="@drawable/ic_clubhouse_logo_24dp"
            android:drawableLeft="@drawable/ic_clubhouse_logo_24dp" />
        <TextView
            android:id="@+id/textView_share_asana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:padding="8dp"
            android:text="@string/textView_loggerbird_asana_title"
            android:drawableStart="@drawable/ic_asana_logo_24dp"
            android:drawableLeft="@drawable/ic_asana_logo_24dp"
            />
        <TextView
            android:id="@+id/textView_share_bitbucket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:padding="8dp"
            android:text="@string/textView_loggerbird_bitbucket_title"
            android:drawableStart="@drawable/ic_bitbucket_logo_24dp"
            android:drawableLeft="@drawable/ic_bitbucket_logo_24dp"/>
        <TextView
            android:id="@+id/textView_discard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:padding="8dp"
            android:text="@string/textView_loggerbird_discard_title"
            android:drawableStart="@drawable/ic_delete_sweep_black_24dp"
            android:drawableLeft="@drawable/ic_delete_sweep_black_24dp" />
    </com.google.android.material.circularreveal.CircularRevealLinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fragment_floating_action_button"
            android:layout_margin="1dp"
            android:tint="@color/white"
            android:background="@color/black"
            app:borderWidth="0dp"
            android:elevation="0dp"
            app:elevation="0dp"
            app:fabSize="normal"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/loggerbird" />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fragment_floating_action_button_video"
                android:layout_margin="1dp"
                style="@style/AppTheme.FabSpeedDial"
                app:borderWidth="0dp"
                app:fabSize="auto"
                app:elevation="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_videocam_black_24dp" />
            <TextView
                android:id="@+id/fragment_textView_counter_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_text_view"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:visibility="gone"
                app:elevation="1dp"
                android:textStyle="bold"
                android:textSize="12sp" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fragment_floating_action_button_audio"
            style="@style/AppTheme.FabSpeedDial"
            android:layout_margin="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:visibility="gone"
            app:borderWidth="0dp"
            app:elevation="0dp"
            android:scaleType="fitCenter"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_mic_black_24dp" />
        <TextView
            android:id="@+id/fragment_textView_counter_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_text_view"
            android:gravity="center"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textStyle="bold"
            android:textSize="12sp"
            app:elevation="1dp" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fragment_floating_action_button_screenshot"
            style="@style/AppTheme.FabSpeedDial"
            android:layout_width="wrap_content"
            android:layout_margin="1dp"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:visibility="gone"
            app:borderWidth="0dp"
            app:elevation="1dp"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_photo_camera_black_24dp" />
        <TextView
            android:id="@+id/fragment_textView_size_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            app:elevation="1dp"
            android:singleLine="true"
            android:textColor="@color/secondaryColor"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            app:borderWidth="0dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/fragment_textView_size_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:singleLine="true"
            android:textColor="@color/secondaryColor"
            android:textSize="12sp"
            android:textStyle="bold"
            app:borderWidth="0dp"
            app:elevation="1dp"
            android:layout_gravity="center"
            android:visibility="gone">
        </TextView>
    </LinearLayout>
</FrameLayout>
